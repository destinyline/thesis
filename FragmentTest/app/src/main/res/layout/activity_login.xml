<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.a13560301.dream.fragmenttest.LoginActivity">

    <Button
        android:id="@+id/btnregis"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#009900"
        android:text="SIGN UP"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:onClick="onClicksignup"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/SingIn" />

    <EditText
        android:id="@+id/EDTPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#4d000000"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:hint="Password"
        android:textColorHint="#73ffffff"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:textSize="13sp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/SingIn"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/EDTUsername"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#4d000000"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:hint="Username"
        android:textColorHint="#73ffffff"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/EDTPassword" />

    <Button
        android:id="@+id/SingIn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:text="LOGIN"
        android:textSize="14sp"
        android:textColor="#696969"
        android:onClick="onClickSignIn"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/btnregis"
        android:layout_alignStart="@+id/EDTPassword" />

</RelativeLayout>